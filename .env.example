# FireMode Compliance Platform Environment Configuration
# Copy this file to .env and populate with your actual values

# --- Runtime ---
ENV=development
PORT=8000

# --- Database (PostgreSQL 16 target; compatible with 14+) ---
POSTGRES_USER=app
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=app
# Note: Most .env loaders don't support variable interpolation
# Construct DATABASE_URL in application code or use literal connection string
DATABASE_URL=postgresql+psycopg://app:change_me_in_production@localhost:5432/app

# --- Auth / Crypto ---
JWT_ISSUER=example.com
JWT_AUDIENCE=example.com
JWT_SECRET=changeme
JWT_EXPIRES_IN_SECONDS=900
FERNET_KEY=changeme_base64_32bytes   # e.g., from cryptography.fernet.Fernet.generate_key()
ARGON2_TIME_COST=3
ARGON2_MEMORY_COST=65536
ARGON2_PARALLELISM=2

# Legacy JWT fields (if still needed by existing code)
JWT_SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# PII Encryption (legacy, prefer Fernet above)
PII_ENCRYPTION_KEY=

# Application Settings
SECRET_KEY=
ENVIRONMENT=development

# Critical Defect Notification (Task 3.2 - AS 1851-2012 Compliance)
DEFECT_MONITOR_ENABLED=true
DEFECT_MONITOR_INTERVAL=3600  # Check every hour (in seconds)

# Email Notification Configuration
NOTIFICATION_EMAIL_FROM=noreply@fireai.com
NOTIFICATION_SMTP_HOST=smtp.sendgrid.net
NOTIFICATION_SMTP_PORT=587
NOTIFICATION_SMTP_USERNAME=
NOTIFICATION_SMTP_PASSWORD=

# SMS Notification Configuration (Optional)
NOTIFICATION_SMS_API_KEY=
NOTIFICATION_SMS_API_URL=https://api.twilio.com/2010-04-01
