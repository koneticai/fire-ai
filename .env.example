# FireMode Compliance Platform Environment Configuration
# Copy this file to .env and populate with your actual values

# Database Configuration
DATABASE_URL=

# JWT Authentication
JWT_SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# PII Encryption
PII_ENCRYPTION_KEY=

# Application Settings
SECRET_KEY=
ENVIRONMENT=development

# Critical Defect Notification (Task 3.2 - AS 1851-2012 Compliance)
DEFECT_MONITOR_ENABLED=true
DEFECT_MONITOR_INTERVAL=3600  # Check every hour (in seconds)

# Email Notification Configuration
NOTIFICATION_EMAIL_FROM=noreply@fireai.com
NOTIFICATION_SMTP_HOST=smtp.sendgrid.net
NOTIFICATION_SMTP_PORT=587
NOTIFICATION_SMTP_USERNAME=
NOTIFICATION_SMTP_PASSWORD=

# SMS Notification Configuration (Optional)
NOTIFICATION_SMS_API_KEY=
NOTIFICATION_SMS_API_URL=https://api.twilio.com/2010-04-01